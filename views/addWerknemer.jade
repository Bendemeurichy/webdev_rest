doctype html
html
    head
        title add
    body
        h1 Voeg een nieuwe werknemer toe
        span
            form(method='post', action='/werknemers/add')
                label(for='naam') Voor en achternaam:
                    input(type='text', name='naam', required=true)
                    br
                    label(for='email') E-mail address:
                    input(type='text', name='email', required=true)
                    br
                    label(for='bedrijf') Bedrijf:
                        select(name='bedrijf', required=true)
                            each bedrijf in bedrijven
                                option(value=`${bedrijf.naam}`) #{bedrijf.naam}
                    br
                    label(for='functie') Functie:
                    input(id="functie", name="functie", required=true)
                    br
                    button(type='submit') Voeg toe